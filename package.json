{
  "name": "couple-moments",
  "version": "1.0.0",
  "description": "A couple's exclusive platform to record shared moments",
  "main": "index.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "dev:wrangler": "wrangler pages dev --local",
    "deploy": "npx wrangler pages publish dist --project-name=baoandkai",
    "setup-db": "node setup-database.js",
    "setup-db:remote": "node setup-database.js --remote",
    "db:init": "npx wrangler d1 execute oursql --file=./migrations/init.sql",
    "db:init:remote": "npx wrangler d1 execute oursql --file=./migrations/init.sql --remote",
    "db:migrate": "npx wrangler d1 migrations apply oursql",
    "db:migrate:remote": "npx wrangler d1 migrations apply oursql --remote"
  },
  "dependencies": {
    "date-fns": "^2.29.3",
    "itty-router": "^5.0.21",
    "lucide-react": "^0.263.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.8.0"
  },
  "devDependencies": {
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "@vitejs/plugin-react": "^3.1.0",
    "autoprefixer": "^10.4.13",
    "postcss": "^8.4.21",
    "tailwindcss": "^3.2.7",
    "vite": "^4.1.0",
    "wrangler": "^4.28.1"
  }
}
