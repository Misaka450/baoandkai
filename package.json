{
  "name": "couple-moments",
  "version": "1.0.0",
  "description": "A couple's exclusive platform to record shared moments",
  "main": "index.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "dev:wrangler": "wrangler pages dev --local",
    "deploy": "npx wrangler pages publish dist --project-name=baoandkai",
    "setup-db": "node setup-database.js",
    "setup-db:remote": "node setup-database.js --remote",
    "db:init": "npx wrangler d1 execute oursql --file=./migrations/init.sql",
    "db:init:remote": "npx wrangler d1 execute oursql --file=./migrations/init.sql --remote",
    "db:migrate": "npx wrangler d1 migrations apply oursql",
    "db:migrate:remote": "npx wrangler d1 migrations apply oursql --remote"
  },
  "dependencies": {
    "@sentry/browser": "^10.5.0",
    "@sentry/node": "^10.5.0",
    "@sentry/react": "^10.5.0",
    "@tanstack/react-query": "^5.90.11",
    "@tsndr/cloudflare-worker-jwt": "^3.2.0",
    "bcryptjs": "^3.0.3",
    "date-fns": "^2.29.3",
    "itty-router": "^5.0.21",
    "lucide-react": "^0.263.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.8.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.13",
    "clsx": "^2.1.1",
    "postcss": "^8.4.21",
    "rollup-plugin-visualizer": "^6.3.2",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^3.2.7",
    "terser": "^5.43.1",
    "typescript": "^5.0.0",
    "vite": "^6.0.0",
    "vite-tsconfig-paths": "^5.1.4",
    "wrangler": "^4.28.1"
  }
}